{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "components/*": ["src/components/*"],
      "features/*": ["src/features/*"],
      "modules/*": ["src/modules/*"],
      "shared/*": ["src/shared/*"],
      "hooks/*": ["src/hooks/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}